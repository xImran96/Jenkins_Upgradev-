pipeline {
    
    agent any

    stages {
    
        stage('Build Application') {
    
            steps {
                sh 'mvn -f java-tomcat-sample/pom.xml install package'
            }
    
            post {
    
                success {
                    echo "Now Archiving the Artifacts...."
                    archiveArtifacts artifacts: '**/*.war'
                }
            }
    
        }

    }

}